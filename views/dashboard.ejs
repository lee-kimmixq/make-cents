<%- include('header', {title: "Home"}); -%>

<%if (newTrxnId) {%>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
    </symbol>
  </svg>
  <%if (newTrxnId === 'delete') {%>
    <div class="alert alert-warning d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>Transaction Deleted!</div>
    </div>
  <%} else {%>
    <div class="alert alert-success d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>Transaction Recorded! Click <a href="/trxn/<%=newTrxnId%>" class="alert-link">here</a> to view!</div>
    </div>
  <%}%>   
<%}%>

<h1>Total Expenses (this month): $<%=totalAmt%></h1>

<table class="table table-hover table-borderless">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Name</th>
      <th scope="col">Amount</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%trxn.forEach((item) => { %>

        <tr>
          <td><%=item.date%></td>
          <td>
            <%=item.exp_name%>
            <span class="badge bg-secondary"><%=item.category%></span>
          </td>
          <td><%=item.exp_amount%></td>
          <td>
            <a class="btn btn-primary btn-sm" href="/trxn/<%=item.id%>">View</a>
            <a class="btn btn-primary btn-sm" type="button" href="/trxn/<%=item.id%>/edit">Edit</a>
            <form action="?_method=DELETE" method="POST">
              <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
            </form>
          </td>
        </tr>
    <%})%>
  </tbody>
</table>

<div class="d-grid gap-2">
  <a class="btn btn-outline-primary" type="button" href="/trxn">View All Transactions</a>
  <a class="btn btn-primary" type="button" href="/new">Add New Transaction</a>
</div>



<%- include('footer'); -%>