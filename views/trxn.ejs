<%- include('header', {title: "Transaction"}); -%>
<%- include('navbar'); -%>

<%if (from) {%>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
    </symbol>
  </svg>

  <div class="alert alert-success d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
    <div>Transaction Edited!</div>
  </div>
<%}%>

<h1 class="text-center display-4 fw-bold">My Transaction</h1>

<div class="container text-center" style="max-width:360px; font-size:large;">
  <table class="table table-borderless">
    <tbody>
      <tr>
        <th scope="row">Date:</th>
        <td><%=details.date%></td>
      </tr>
      <tr>
        <th scope="row">Category:</th>
        <td><%=details.category%></td>
      </tr>
      <tr>
        <th scope="row">Name:</th>
        <td><%=details.exp_name%></td>
      </tr>
      <tr>
        <th scope="row">Amount:</th>
        <td><%=details.exp_amount%></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="container d-grid gap-2" style="max-width:540px">
  <a class="btn btn-outline-primary" type="button" href="/trxn/<%=trxnId%>/edit">Edit Transaction</a>
  <form action="?_method=DELETE" method="POST">
    <input type="submit" class="btn btn-outline-danger" style="width: 540px;" value="Delete Transaction" />
  </form>
  <a class="btn btn-outline-secondary" type="button" href="/dashboard">Back to Dashboard</a>
</div>
  
<%- include('footer'); -%>
