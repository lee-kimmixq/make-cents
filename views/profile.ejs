<%- include('header', {title: "Dashboard"}); -%>
<%- include('navbar'); -%>

<%if (from) {%>
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
    </symbol>
  </svg>
  <%if (from === 'newCat') {%>
    <div class="alert alert-success d-flex align-items-center" role="alert">
      <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
      <div>New category created!</div>
    </div>
  <%}%>   
<%}%>

<h1 class="text-center display-4 fw-bold">Hello there, <span class="text-primary"><%=user%></span>!</h1>

<h2 class="text-center lead text-muted" style="margin-top: 20px;"> YOUR CATEGORIES </h2>
<div class="container" style="max-width:360px">
  <ul class="list-group list-group-flush text-center" style="margin-bottom: 20px;">
    <% categories.forEach((cat) => {%>
        <li class="list-group-item"><%=cat%></li>
        <%})%>
  </ul>
  <!-- Button trigger modal -->
  <div class="container d-grid gap-2" style="width:200px">
    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newCategory">
      Add Category
    </button> 
  </div>

  <!-- Modal -->
  <div class="modal fade" id="newCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Add category</h5>
        </div>
        <div class="modal-body">
          <form id="new-cat-form" action="/profile" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" id="category" name="category">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <input class="btn btn-primary" type="submit" form="new-cat-form" value="Save changes" />
        </div>
      </div>
    </div>
  </div>


</div>

<div class="container d-grid gap-2" style="margin-top: 50px; max-width:540px">
  <form action="./logout?_method=DELETE" method="POST">
      <input class="btn btn-outline-secondary btn-small" style="width:540px;" type="submit" value="Log Out" />
  </form>
</div>

<%- include('footer'); -%>